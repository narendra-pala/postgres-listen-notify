{
  "name": "pg-listen-notify",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "start": "ts-node ./server.ts",
    "start:watch": "nodemon"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "*.ts",
      "**/*.ts"
    ],
    "exec": "npm start",
    "ext": "ts"
  },
  "dependencies": {
    "@types/express": "^4.17.14",
    "body-parser": "^1.20.1",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "nodemon": "^2.0.20",
    "pg": "^8.8.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  }
}
